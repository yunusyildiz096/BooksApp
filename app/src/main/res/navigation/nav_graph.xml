<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/booksItem">

    <fragment
        android:id="@+id/booksItem"
        android:name="com.example.booksapp.fragments.BooksFragment"
        android:label="BooksFragment" >

    </fragment>
    <fragment
        android:id="@+id/profileItem"
        android:name="com.example.booksapp.fragments.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileItem_to_singUp"
            app:destination="@id/singUp" />
    </fragment>
    <fragment
        android:id="@+id/favoriteItem"
        android:name="com.example.booksapp.fragments.FavoriteBook"
        android:label="FavoriteBook" />
    <fragment
        android:id="@+id/singIn"
        android:name="com.example.booksapp.fragments.SingIn"
        android:label="SingIn" >
        <action
            android:id="@+id/action_singIn_to_singUp"
            app:destination="@id/singUp" />
        <action
            android:id="@+id/action_singIn_to_booksItem"
            app:destination="@id/booksItem" />
    </fragment>
    <fragment
        android:id="@+id/singUp"
        android:name="com.example.booksapp.fragments.SingUp"
        android:label="sing_up"
        tools:layout="@layout/sing_up" >
        <action
            android:id="@+id/action_singUp_to_singIn"
            app:destination="@id/singIn" />
        <action
            android:id="@+id/action_singUp_to_booksItem"
            app:destination="@id/booksItem" />
    </fragment>
</navigation>